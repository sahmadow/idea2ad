# Google AI
GOOGLE_API_KEY=your_google_api_key
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Meta (Facebook) Marketing API
META_ACCESS_TOKEN=your_meta_access_token
META_APP_SECRET=your_app_secret
META_APP_ID=your_app_id
META_AD_ACCOUNT_ID=act_XXXXXXXXX
META_DEFAULT_PAGE_ID=your_page_id
META_CONFIG_ID=your_fb_login_config_id

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/idea2ad

# JWT Auth
JWT_SECRET_KEY=generate_a_secure_32_char_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=idea2ad-images
AWS_REGION=us-east-1

# Sentry (optional)
SENTRY_DSN=

# Environment
ENVIRONMENT=development

# URLs (HTTPS required for Facebook OAuth)
api_url=https://localhost:8000
frontend_url=https://localhost:5173
